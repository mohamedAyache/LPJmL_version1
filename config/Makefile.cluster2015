CC	= mpiicc
OPTFLAGS= -g -O3 -ipo -xCORE-AVX2 -no-prec-div -no-inline-max-total-size -no-inline-max-size
DEBUGFLAGS = -g
LPJFLAGS=  -DUSE_RAND48 -DUSE_MPI -DSAFE -DWITH_FPE -DUSE_TGAMMA -DSTORECLIMATE -DUSE_NETCDF -DUSE_UDUNITS #-DDAILY_ESTABLISHMENT
WFLAG   = -Wall -w3
NETCDF_INC      = -I$(NETCDF_CROOT)/include -I$(UDUNITSROOT)/include
NETCDF_LIB      = -L$(NETCDF_CROOT)/lib64 -L$(UDUNITSROOT)/lib -L$(EXPATROOT)/lib -L$(HDF5ROOT)/lib -L$(CURLROOT)/lib -L$(OPENSSLROOT)/lib -L$(SZIPROOT)/lib
O	= o
A	= a
E	=
AR	= xiar
ARFLAGS	= r 
RM	= rm 
RMFLAGS	= -f
LIBS    = $(NETCDF_LIB) -lnetcdf -ludunits2 -lexpat -lhdf5 -lcurl -lz  -ldl -lssl -lcrypto -lhdf5_hl -lsz
LINKMAIN= mpiicc
X11LIB	= -L/usr/X11R6/lib64 -lX11 -lxcb -lxcb-xlib -lXau
VIEWPRG	= lpjliveview
LINK	= icc
SLASH	= /
MKDIR	= mkdir -p
